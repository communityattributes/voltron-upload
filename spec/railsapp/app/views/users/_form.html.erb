      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, preview: :horizontal_tile %>
  </div>

  <div class="field">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true, preview: :vertical_tile, options: { dictRemoveFile: 'Remove', dictCancelUpload: 'Cancel' } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
